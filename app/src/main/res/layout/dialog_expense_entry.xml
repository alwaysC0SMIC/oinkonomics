<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_expense_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expense name"
            android:inputType="textCapSentences"
            android:maxLines="1" />

        <EditText
            android:id="@+id/input_expense_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:hint="Date"
            android:inputType="date"
            android:maxLines="1"
            android:clickable="true" />

        <Spinner
            android:id="@+id/input_expense_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/input_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/receipt_preview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:background="#DDDDDD"
            android:contentDescription="Receipt preview"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_attach_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Attach Receipt" />

        <Button
            android:id="@+id/button_remove_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Remove Receipt"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
