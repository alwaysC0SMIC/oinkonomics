<?xml version="1.0" encoding="utf-8"?>
<com.example.oinkonomics.ui.dashboard.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_columnWeight="1"
    android:layout_gravity="fill"
    android:layout_margin="8dp"
    android:layout_rowWeight="1"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.oinkonomics.ui.dashboard.RadialProgressView
            android:id="@+id/category_progress_ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Category"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="R0 / R0"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

    </FrameLayout>

</com.example.oinkonomics.ui.dashboard.SquareLinearLayout>