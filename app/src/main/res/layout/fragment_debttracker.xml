<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E6"
    tools:context=".ui.debttracker.DebtTrackerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Debt Total Header -->

        <TextView
            android:id="@+id/titleName6"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:gravity="center|left"
            android:text="Debt"
            android:textColor="#333333"
            android:textSize="60sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debt Total:"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_debttracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R6200"
                android:textColor="#333333"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:progress="25"
                android:progressTint="#4CAF50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paidLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R2500 paid"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/leftLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R3700 left"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/debtsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            tools:listitem="@layout/item_debt_entry" />

    </LinearLayout>

</ScrollView>